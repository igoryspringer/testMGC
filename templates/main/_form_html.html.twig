<form name="product" method="post" id="product">
    <div class="row">
        <button type="submit" id="btn-form" class="btn btn-success rectangle_6">
            <i class="fas fa-plus-circle"></i>
            <span class="add_item">Add new item</span>
        </button>
        <button type="button" id="btn-del" class="btn btn-danger rectangle_7">
            <i class="fas fa-trash"></i>
            <span class="delete_item">Delete item</span>
        </button>
    </div>
    <div class="rectangle_8">
        <div class="row">
            <input type="text" id="product_title" name="product[title]" required="required" placeholder="Name of item" class="rectangle_9">
            <input type="text" id="product_cost" name="product[cost]" required="required" placeholder="Price" class="rectangle_10">
        </div>
    </div>
</form>