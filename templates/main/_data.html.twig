<div class="rectangle_2">
    <div class="current_date">
            <span class="text-center" id="current_date">{{ date }}</span>
    </div>
</div>
<div class="rectangle_5">
    <form>
        {% if products %}
            <div class="form-check radio_item">
                <table class="table table-borderless">
                    {% for product in products %}
                        <tr>
                            <th scope="row"><input class="form-check-input" type="radio" name="delete" value="{{ product.id }}"></th>
                            <td><label class="form-check-label">{{ product.title }}</label></td>
                            <td style="padding-left: 100px;"><label class="form-check-label">$ {{ product.cost }}</label></td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        {% endif %}
    </form>
    {% if not products %}
        <h3>There are no entries.</h3>
    {% endif %}
</div>
