{% if products %}
<form action="">
    <div class="form-check radio_item">
        <table class="table table-borderless">
            <tbody>
            {% for product in products %}
                <tr>
                    <th scope="row"><input class="form-check-input" type="radio" name=""></th>
                    <td><label class="form-check-label">{{ product.title }}</label></td>
                    <td style="padding-left: 100px;"><label class="form-check-label">$ {{ product.cost }}</label></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</form>
{% endif %}

{% if not products %}
    <h3>There are no entries.</h3>
{% endif %}